<Window x:Class="ConstraintLayoutSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConstraintLayoutSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        FontSize="20">
    <Grid>
        <Canvas>
            <Button Content="top-left" Canvas.Top="10" Canvas.Left="10"/>
            <Button Content="top-right" Canvas.Top="10" Canvas.Right="10" />
            <Button Content="bottom-left" Canvas.Bottom="10" Canvas.Left="10" />
            <Button Content="bottom-right" Canvas.Bottom="10" Canvas.Right="10"/>
        </Canvas>
    </Grid>
</Window>
